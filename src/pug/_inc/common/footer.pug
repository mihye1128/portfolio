- var contactTitle = 'ご連絡には、<br>Twitter・Facebook・メールをご利用ください。';
footer.footer
  .container
    p.footer--title #{pageTitle}
    p.footer--contact !{contactTitle}
    ul.footer--list
      each item in contact
        li.footer--item
          a.footer--link(href=item.url, target="_blank", rel="noopener", aria-label=item.title + 'から連絡する')
            i(class='icon-'+item.icon)
    p.footer--copy &copy; !{copy}.
    a#js-return_top.footer--btn(href="#concept", aria-label="トップへ戻る")

script(src="/assets/js/main.js?20200630")
