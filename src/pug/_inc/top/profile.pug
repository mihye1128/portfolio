- var sectionTitle = 'Profile';
- var sectionDescription = '簡単なプロフィールと経歴です。<br>SNSは、Twitterを主に利用しています。';
- var profileName = 'mitsui';
- var profileSns = '@mitsui_mk';
- var profileTwitter = 'https://twitter.com/mitsui_mk';
- var profileText = '1989年生まれ 広島市在住。<br>Web業界への転職前は、会計事務所にて法人経理を担当していました。<br>経理の仕事は嫌いではなかったものの、新しいチャレンジを求め、転職を決意しました。<br>独立後は、フロントエンドエンジニア勉強会の運営を経て、初学者向けプログラミング学習サービスでのメンターを経験しました。';
-
  var careers = [
    {
      date: '2017.07',
      text: '職業訓練校webクリエイター養成科(6ヶ月)へ入所。'
    },
    {
      date: '2018.03',
      text: 'Webアプリ開発・Web制作会社へ就職。<br>主にHTML/CSSコーディング、WordPressテーマ作成業務を担当。'
    },
    {
      date: '2019.04',
      text: 'フリーランスのフロントエンドエンジニアとして活動開始。WordPressやMakeshopなどのテーマ開発案件へ参画。'
    },
    {
      date: '2021.04',
      text: '受託開発会社にて、ディレクションを担当。<br>プログラミング学習サービスにて、メンターを担当。'
    },
    {
      date: '2022.02',
      text: '受託開発会社にて、フロントエンド開発（Angular）を担当。'
    },
    {
      date: '2022.07',
      text: '自社サービスサイト開発・保守案件へ参画。リプレース（WordPress）や新機能開発（React, Firebase）を担当。'
    },
  ];

section#profile.sec.profile
  +sectionTitle(sectionTitle)
  +sectionDiscription(sectionDescription)

  article.container-box.profile--contents
    .profile--main
      dl.profile--data
        .profile--img(style='background-image:url(/assets/images/common/icon-host.jpg);')
        dt.profile--name
          | #{profileName}
          br
          span.profile--sns
            | (
            a.profile--twitter(href=profileTwitter, target="_blank", rel="noopener") #{profileSns}
            | )
        dd.profile--text !{profileText}
    .profile--side
      dl.profile--career
        each career in careers
          dt #{career.date}
          dd !{career.text}
