section#skills.sec.skills
  +sectionTitle(sectionTitle)
  +sectionDiscription(sectionDescription)

  .container-box.skills--contents
    each skill in skills
      h3.skills--title #{skill.title}
      .js-fadein.skills--list
        each data in skill.contents
          .skills--item
            .skills--icon
              i(class='icon-'+data.icon)
            dl.skills--data
              dt.skills--dt #{data.title}
              dd.skills--comment !{data.comment}
